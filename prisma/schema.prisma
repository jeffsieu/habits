generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Auth.js models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts Account[]
  sessions Session[]
  habits   Habit[]
  tags     HabitTag[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// Enums for Habit configuration
enum GoalInterval {
  DAILY
  WEEKLY
  MONTHLY
  CUSTOM
}

enum RecordingType {
  YES_NO
  COUNT
  VALUE
}

enum EndConditionType {
  DATE
  TOTAL_DAYS
  TOTAL_VALUE
  STREAK
}

// Main Habit model
model Habit {
  id          String  @id @default(cuid())
  name        String
  description String?
  isGoodHabit Boolean @default(true)
  color       String? // Hex color code for the habit
  icon        String? // Lucide icon name

  // User association (nullable for migration from localStorage)
  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Recording type: how progress is logged each day
  recordingType RecordingType @default(YES_NO)

  // Goal configuration: target within an interval
  goalInterval       GoalInterval @default(DAILY)
  goalTarget         Float? // Target count/value for the interval
  customIntervalDays Int? // Every X days (for CUSTOM interval)

  // Scheduling: which days the habit appears on (empty = every day)
  scheduledDaysOfWeek Int[] // Array of weekdays 0-6 (Sun-Sat)

  // Date configuration
  startDate         DateTime          @default(now())
  endConditionType  EndConditionType?
  endConditionValue String? // Stores date string or numeric value

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tags           HabitTag[]
  progressEvents HabitProgressEvent[]

  @@index([userId])
}

// Tag model for categorizing habits
model HabitTag {
  id    String  @id @default(cuid())
  name  String
  color String? // Hex color code

  // User association (nullable for migration from localStorage)
  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  habits Habit[]

  // Unique tag name per user
  @@unique([userId, name])
  @@index([userId])
}

// Progress event model for tracking daily habit completion
model HabitProgressEvent {
  id      String   @id @default(cuid())
  habitId String
  date    DateTime // The day being logged
  value   Float    @default(1) // User-entered amount; supports decimals for VALUE type
  note    String?

  // Timestamps
  createdAt DateTime @default(now())

  // Relations
  habit Habit @relation(fields: [habitId], references: [id], onDelete: Cascade)

  // Ensure one progress event per habit per day
  @@unique([habitId, date])
}
